//calc sum and avg 
#include <stdio.h>
#include <conio.h>
int main()
{

    int num[100], n, sum = 0,avg;
    printf("Enter number of array elements=");
    scanf("%d", &n);

    for (int i = 0; i < n; i++)
    {
        printf("Enter array element=");
        scanf("%d", &num[i]);
    }

    for (int i = 0; i < n; i++)
    {
        sum = sum + num[i];
    
    }
    avg=sum/n;
    printf("the sum is =%d", sum);
    printf("the average is =%d", avg);
}
